extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
   .container.my-3
      .row
         .col-12
            .titlePage
               +box-head(pageTitle)
      .row
         each item, index in products
            .col-md-4.mb-md-3
               a(href=`/products/${item.slug}`)
                  .card(style="width: 100%; height: auto;")
                     .card-img-top
                        img(src=item.thumbnail, alt=item.title style="width: 100%; height: auto; aspect-ratio: 5/6")
                     .card-body
                        h5.card-title #{item.title}
                        .inner-price-new #{item.newPrice}$
                        .inner-price-old #{item.price}$
                        .btn.btn-danger -#{item.discountPercentage}%
               
            