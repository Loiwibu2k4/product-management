extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .container-fluid.mt-md-5.p-md-5
        .row
            .inner-wrap
                .col-md-6.inner-image
                    img(src=`${product.thumbnail}`, alt="")
                .col-md-6.inner-content
                        .inner-title
                            h2 #{product.title}
                        .row.ml-md-1
                            b(class="mr-md-2")  Brand:
                            .inner-brand.ml-md-0
                                div #{ product.brand ? product.brand : "   unknown" }
                        .inner-desc.ml-md-0
                            i #{product.description}  
                .col-md-12.m-md-5.d-flex.flex-row.justify-content-around
                    <button type="button" class="btn btn-outline-primary btn-lg m-md-1"> Final Price #{product.price}$</button>
                    <button type="button" class="btn btn-outline-secondary btn-lg m-md-1"> Discount #{product.discountPercentage}%</button>
                    <button type="button" class="btn btn-outline-success btn-lg m-md-1"> Stock #{product.stock}</button>
                    <button type="button" class="btn btn-outline-danger btn-lg m-md-1" style="color: #F72D93; background: white;"> Position #{product.position}</button>
                    a(
                        href="javascript:;" 
                        class="btn btn-outline-danger btn-lg m-md-1"
                    ) #{product.status}
