mixin form-change-multi(path, listIdChangeStatus)
    form(
        action=path
        method="POST"
        form-change-multi
    )
        .d-flex.align-items-start
            if(role.permissions.includes("products_edit"))
                .form-group
                    .d-flex.flex-row
                        select(name="type" class="form-control" id="select-change-status" style="border: 1px solid #ddd")
                            option(disabled selected) -- Apply For All -- 
                            option(value="active") Kích Hoạt
                            option(value="inactive") Hủy Kích Hoạt
                            option(value="delete") Delete
                            option(value="restore") Restore
                            option(value="change-position") Apply Change Position
                            option(value="hard-delete") Hard Delete
                        
            .form-group.ml-sm-1
                input(
                    placeholder="Range for Development !"
                    id="list-id-products"
                    type="text"
                    name="ids"
                    value=listIdChangeStatus
                    class="form-control"
                    list-id-products
                )
            .ml-md-1
                button(type="submit" class="btn btn-success" ) Apply
            .ml-md-1
                button(type="button" class="btn btn-primary" clear-list-id) Clear