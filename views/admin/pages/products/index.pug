extends ../../layouts/default.pug

block main

    .fixed-title
        h1 #{pageTitle}
    
    .card.mb-3 
        .card-header Filter And Search
        .card-body
            .row
                .col-6
                    each item, index in filter
                        button(class=`btn btn-sm ml-1 btn-outline-success ${item.class}` button-status=item.status
                        ) #{item.name}
                .col-6.mb-2
                    form(action="" id="form-search")
                        .input-group 
                            input(
                                type="text"
                                placeholder="Enter Your Keywords"
                                name="keyword"
                                class="form-control"
                                value=keyword
                            )
                            .input-group-append
                                button(
                                    class="btn btn-success"
                                    type="submit"
                                ) Search


            table.table.table-hover.table-sm
                thead
                    tr
                        th STT
                        th Image
                        th Title
                        th Price
                        th Status
                        th Action
                tbody
                    each item, index in products
                        tr
                            td #{index + 1}
                            td
                                img(src=item.thumbnail, alt="SP1" width="100px" height="auto")
                            td #{item.title}
                            td #{item.price}$
                            td 
                                if(item.status == "active") 
                                    a(href="#" class="badge badge-success") #{item.status}
                                else 
                                    a(href="#" class="badge badge-danger") #{item.status} 
                            td 
                                button(class="btn btn-warning btn-sm") Edit
                                button(class="btn btn-danger btn-sm ml-1") Delete
