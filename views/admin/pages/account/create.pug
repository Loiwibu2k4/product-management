extends ../../layouts/default.pug
include ../../mixins/alert.pug


block main
    +alert-error("7000")
    +alert-success("7000")
    .left-1
        h2 #{pageTitle}
    form(
        action=`${prefixAdmin}/account/create`
        id="form-create-account"
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-control")
            lable(for="fullName") User Name*
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required
            )
        div(class="form-control")
            lable(for="email") Email*
            input(
                type="text"
                class="form-control"
                id="email"
                name="email"
                required
            )
        div(class="form-control")
            lable(for="password") Password*
            input(
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
            )
        div(class="form-control")
            lable(for="phone") Phone*
            input(
                type="number"
                class="form-control"
                id="phone"
                name="phone"
                required
            )
        div(class="form-control")
            lable(for="avatar") Avatar (File/Link, Please Click On Button To Toggle Option !)
            .mb-md-2.mt-md-2
                button(type="button" class="btn btn-success" button-toggle-option-image) Populate Image Link
            div(input-change )
                input(
                input-image-text
                type="text"
                class="form-control-file"
                id="avatar"
                placeholder="Your Image Link"
                name="avatar"
                style="padding: 7px; border-radius: 5px"
            )
            .col-md-12.text-center.m-md-2
                div(preview-image-upload class="none-img-button")
                    img(src="" style="width: 50%; height: auto;")
        div(class="form-control")
            lable(for="role_id") Role*
            select(name="role_id" id="role_id" class="form-control" style="border: 1px solid #897979")
                option(selected disabled) #{records.length ? "Choose Role Option" : "You Need To Create New Role !"}
                each item in records 
                    option(value=item.id) #{item.title} 
        .row.mt-md-3.mb-md-3.left-1
            .col-md-3
                div(class="form-control form-check form-check-inline")
                    input(
                        type="radio"
                        class="form-check-input"
                        id="statusActive"
                        name="status"
                        value="active"
                        checked
                    )
                    lable(for="statusActive") Active
            .col-md-9
                div(class="form-control form-check form-check-inline")
                    input(
                        type="radio"
                        class="form-check-input"
                        id="statusInActive"
                        name="status"
                        value="inactive"
                    )
                    lable(for="statusInActive") In-Active

        .ml-md-2
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-success btn-lg btn-block"
                    disabled = records.length ? false : true
                ) Create New


    script(src="/admin/js/product.js")
    script(src="/admin/js/createAccount.js")

    
